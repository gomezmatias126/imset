---
const notebookServicios = [
  "Reballing",
  "Bios",
  "Reemplazo de componentes",
  "Cambio de Display, Teclado, Baterias, etc",
  "Actualizacion de Discos y Ram",
  "MicroElectronica",
  "Actualizacion de Windows",
  "Instalaci贸n de Programas",
];
const pcServicios = [
  "Reballing",
  "Bios",
  "Reemplazo de componentes",
  "Actualizacion de Discos y Ram",
  "MicroElectronica",
];
---

<section id="servicios" class="snap-start relative sm:pt-44 pt-32 overflow-hidden pb-20 sm:pb-32">
  <div class="absolute top-0 left-0 w-full z-10">
    <span
      class="overlay_img_servicios absolute top-0 left-0 z-30 w-full lg:aspect-[2/1] sm:aspect-[1/1] aspect-[4/6]"
    ></span>
    <img
      src="./img/img_servicios.webp"
      alt="Tecnico Arreglando una Notebook"
      class="lg:aspect-[2/1] sm:aspect-[1/1] aspect-[4/6] w-full object-cover"
    />
  </div>
  <div
    class="relative flex items-center justify-center w-full h-auto sm:py-10"
  >
    <h2
      class="2xl:text-[250px] xl:text-[220px] lg:text-[180px] md:text-[150px] sm:text-9xl movil:text-8xl text-7xl font-extra-bold text-light/[0.5] sm:text-light/[0.3] text-center relative z-30"
    >
      SERVICIOS
    </h2>
    <h3 class="absolute w-full sm:top-1/2 top-full left-1/2 sm:-translate-y-2/4 -translate-x-2/4 z-40 xl:text-7xl lg:text-6xl sm:text-5xl text-4xl font-bold text-center">
      Que Ofrecemos?
    </h3>
  </div>
  <div class="container h-full grid_servicios relative z-20 xl:mt-60 xl:mb-20 mt-40 grid grid-rows-[9] items-center justify-center gap-8">
    <article
      class="w-full h-auto lg:h-full lg:col-start-1 lg:col-end-2 lg:row-start-1 lg:row-end-[9] relative border border-[#363636] rounded-2xl bg-[#2A2A2A]/[0.97] backdrop-blur-sm sm:p-10 p-5 servicio1"
    >
      <div class="flex sm:flex-row flex-col-reverse items-start justify-between sm:gap-5 gap-3">
        <h4
          class="font-extra-bold text-transparent bg-clip-text bg-gradient-to-r from-[#00FFB3] to-accent 2xl:text-7xl xl:text-6xl sm:text-5xl text-3xl"
        >
          Reparaci贸n de Notebooks
        </h4>
        <svg
          class="w-1/3 h-min"
          width="200"
          height="150"
          viewBox="0 0 150 100"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M125 87.5C131.875 87.5 137.5 81.875 137.5 75V12.5C137.5 5.625 131.875 0 125 0H25C18.125 0 12.5 5.625 12.5 12.5V75C12.5 81.875 18.125 87.5 25 87.5H0V100H150V87.5H125ZM25 12.5H125V75H25V12.5Z"
            fill="#E9EFFF"></path>
        </svg>
      </div>
      <ul class="mt-6 sm:mt-10 lineaColorServicio relative flex flex-col gap-5 p-6">
        {
          notebookServicios.map((item) => (
            <li class="font-regular sm:text-2xl text-base">{item}</li>
          ))
        }
      </ul>
    </article>
    
    <article
      class="w-full h-auto lg:h-full lg:col-start-2 lg:col-end-3 lg:row-start-1 lg:row-end-7 relative border border-[#363636] rounded-2xl bg-[#2A2A2A]/[0.60] sm:p-10 p-5 servicio3"
    >
      <div class="flex flex-col-reverse sm:flex-row items-start justify-between sm:gap-5 gap-3">
        <h4 class="font-extra-bold text-3xl md:text-4xl lg:text-4xl sm:text-5xl">Reparaci贸n de PC Escritorio</h4>
        <svg
          class=" w-1/3 h-min"
          width="164"
          height="100"
          viewBox="0 0 164 100"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
